<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ly.generalassemb.drewmahrt.classes_lab.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        >

        <EditText
            android:id="@+id/changed_output_text"
            android:layout_width="1px"
            android:layout_height="1px" />
        <EditText
            android:id="@+id/output_text"
            android:layout_width="1px"
            android:layout_height="1px" />
        <EditText
            android:id="@+id/mammal_name"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:textColorHint="#9c9c9c"
            android:hint="    Enter mammal" />

        <EditText
            android:id="@+id/number_of_offspring"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:textColorHint="#9c9c9c"
            android:hint="   Enter offspring #" />

    </LinearLayout>

    <Button
        android:id="@+id/mammal_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ff3765"
        android:text="Add Mammal"
        android:textColor="#ffffff"
        android:textSize="12dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="10dp">

        <EditText
            android:id="@+id/reptile_name"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:textColorHint="#9c9c9c"
            android:hint="   Enter reptile name"
            />

        <EditText
            android:id="@+id/number_of_scales"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:textColorHint="#9c9c9c"
            android:hint="   Enter # of scales"
            />

    </LinearLayout>

    <Button
        android:id="@+id/reptile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4fbd5c"
        android:text="Add Reptile"
        android:textColor="#ffffff"
        android:textSize="12dp"
        android:layout_gravity="center"/>


    <ListView
        android:id="@+id/listView_of_animals"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        ></ListView>
</LinearLayout>
