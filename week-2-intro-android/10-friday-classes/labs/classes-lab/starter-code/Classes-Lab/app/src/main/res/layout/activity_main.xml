<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context="ly.generalassemb.drewmahrt.subclassinglab.CreateAnimalActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/add_lion_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Add Mammal"/>
        <Button
            android:id="@+id/add_snake_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Add Reptile"/>
    </LinearLayout>

    <ListView
        android:id="@+id/animal_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>
