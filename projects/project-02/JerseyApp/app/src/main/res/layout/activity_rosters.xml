<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gg.patrickcummins.myapplication.Activitys.RostersActivity">

    <ImageView
        android:id="@+id/teamImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="@dimen/activity_vertical_margin"

        />

    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/teamImageView"
        android:hint="Search By:" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/searchEditText">

        <RadioButton
            android:id="@+id/nameRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name" />

        <RadioButton
            android:id="@+id/positionRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Position" />

        <RadioButton
            android:id="@+id/numberRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number" />
    </RadioGroup>


    <ListView
        android:id="@+id/playersListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/teamImageView"></ListView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/cartFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/margin_5dp"
        android:src="@drawable/ic_shopping_cart_black_24dp" />

</RelativeLayout>
