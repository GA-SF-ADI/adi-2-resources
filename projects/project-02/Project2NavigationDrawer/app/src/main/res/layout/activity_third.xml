<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.test.project2navigationdrawer.ThirdActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:textColor="#000000"
        android:textSize="38dp"
        android:id="@+id/third_activity_text_name"/>


    <ImageView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:textAllCaps="true"
        android:id= "@+id/third_activity_image"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Details"
        android:fontFamily="cursive"/>

    <TextView
        android:layout_width="wrap_content"
        android:id= "@+id/third_activity_text_price"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:textColor="#000000"
        android:textAllCaps="true"
        android:id="@+id/third_activity_text_gold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:textColor="#000000"
        android:textAllCaps="true"
        android:id="@+id/third_activity_text_stone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:textColor="#000000"
        android:textAllCaps="true"
        android:id="@+id/third_activity_text_measurement"/>





</LinearLayout>
