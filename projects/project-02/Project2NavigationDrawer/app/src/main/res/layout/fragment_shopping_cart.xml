<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.test.project2navigationdrawer.ShoppingCartFragment">

    <TextView
        android:layout_width="wrap_content"
        android:padding="8dp"
        android:textColor="#fff"
        android:fontFamily="casual"
        android:textAllCaps="true"
        android:background="@color/colorPrimary"
        android:textSize="28sp"
        android:id="@+id/shopping_fragment_total_cost_text_view"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:textSize="30dp"
        android:text="REMOVE ITEM"
        android:fontFamily="casual"
        android:textAllCaps="true"
        android:layout_below="@id/shopping_fragment_total_cost_text_view"
        android:id="@+id/remove_button"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/shopping_fragment_total_cost_list_view"
        android:layout_width="wrap_content"
        android:fontFamily="casual"
        android:textAllCaps="true"
        android:layout_height="wrap_content" />

</RelativeLayout>
