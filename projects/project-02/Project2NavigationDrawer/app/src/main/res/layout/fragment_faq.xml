<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/relative"
    tools:context="com.test.project2navigationdrawer.faq">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/jewelbox"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:padding="8dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:background="#000000"
        android:id="@+id/user_story1"
        android:text=
            "User Story 1: As a shopper I want to search for a jewelry item based on description so that I can check if it is available." />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textColor="#ffffff"
        android:background="#000000"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_below="@id/user_story1"
        android:id="@+id/user_story2"
        android:text="User Story 2: As an online shopper I want to browse through items so that I can select the (jewelry) piece that catches my eye."
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textColor="#ffffff"
        android:background="#000000"
        android:layout_below="@id/user_story2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:id="@+id/user_story3"
        android:text="User Story 3: As a consumer I want to add particular items to my shopping cart so that I can determine if the cost is right for me." />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textColor="#ffffff"
        android:background="#000000"
        android:id="@+id/user_story4"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_below="@id/user_story3"
        android:text="User Story 4: As a consumer I want to view a piece and its special details so that I can determine if I want to purchase it." />


</RelativeLayout>
