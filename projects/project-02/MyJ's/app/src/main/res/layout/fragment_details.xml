<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/detail_image_frag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/name_frag" />
    <TextView
        android:id="@+id/name_frag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jordan 23"
        android:layout_alignTop="@+id/price_frag"
        android:layout_toRightOf="@+id/back_button_frag"
        android:layout_toEndOf="@+id/back_button_frag" />
    <TextView
        android:id="@+id/price_frag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="109.99"
        android:layout_above="@+id/description_frag"
        android:layout_alignRight="@+id/buy_button_frag"
        android:layout_alignEnd="@+id/buy_button_frag"
        android:layout_marginBottom="104dp" />
    <TextView
        android:id="@+id/description_frag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="the jhhvytcfgvhbjnkmbszxdcfvgbhjnctfvgbhncfgvhjkcfvghbjcfvgbjk"
        android:layout_above="@+id/back_button_frag"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp" />
    <Button
        android:id="@+id/back_button_frag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/buy_button_frag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>