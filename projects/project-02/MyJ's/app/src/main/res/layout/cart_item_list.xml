<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/j_3"
        android:id="@+id/shoe_img_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"/>
    <LinearLayout
        android:layout_toRightOf="@+id/shoe_img_cart"
        android:id="@+id/itm_hor"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/shoe_name_cart"
        android:text="jordan 1"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:text="1999"
        android:id="@+id/cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itm_hor"
        android:layout_toRightOf="@id/shoe_img_cart"/>

    <TextView
        android:text="109.99"
        android:textSize="15sp"
        android:id="@+id/cart_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="57dp"
        android:layout_alignTop="@+id/shoe_img_cart"
        android:layout_alignParentEnd="true" />


</RelativeLayout>