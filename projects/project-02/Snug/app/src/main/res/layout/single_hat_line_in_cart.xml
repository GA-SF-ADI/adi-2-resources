<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="#ffffff"
    card_view:cardCornerRadius="20dp"
    android:paddingLeft="10dp"
    card_view:cardElevation="5dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_of_hat_in_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:paddingTop="20dp"
            android:src="@drawable/old_orioles" />


        <TextView
            android:id="@+id/textview_name_of_hat_in_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/image_of_hat_in_cart"
            android:text="@string/Hat_name" />

        <ImageButton
            android:id="@+id/imagebutton_to_remove_hat_from_cart"
            android:layout_width="wrap_content"
            android:background="@null"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingRight="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


</android.support.v7.widget.CardView>