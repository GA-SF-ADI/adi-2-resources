<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="generalassembly.yuliyakaleda.usabilitytestingbetterversion">

  <application
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">

    <!-- Each activity is locked to the portrait mode because the image looks stretched in the
        landscape mode-->

    <activity android:name=".MainActivity"
        android:screenOrientation="portrait">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
        android:name=".DogActivity"
        android:label="@string/title_activity_dog"
        android:theme="@style/AppTheme.NoActionBar"
        android:screenOrientation="portrait">
    </activity>
    <activity
        android:name=".TigerActivity"
        android:label="@string/title_activity_tiger"
        android:theme="@style/AppTheme.NoActionBar"
        android:screenOrientation="portrait">
    </activity>
  </application>

</manifest>
