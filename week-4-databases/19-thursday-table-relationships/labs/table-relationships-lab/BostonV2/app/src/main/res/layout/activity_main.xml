<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:id="@+id/addDataButton"
        android:text="Add Data"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/sameCompanyButton"
        android:layout_below="@+id/addDataButton"
        android:layout_centerHorizontal="true"
        android:text="Query: Employees Working At The Same Company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button

        android:layout_below="@id/sameCompanyButton"
        android:layout_centerHorizontal="true"
        android:id="@+id/bostonButton"
        android:text="Query: Companies In Boston"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/topPayer"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/bostonButton"
        android:text="Query: Company With the Highest Salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/topPayer"
        android:id="@+id/topPayerTextView"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ListView
        android:layout_below="@+id/topPayerTextView"
        android:id="@+id/myListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ListView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@android:drawable/ic_input_add"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
